{
  "name": "mdp-auth-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "start:https": "node server-https.js",
    "dev": "nodemon server.js",
    "dev:https": "nodemon server-https.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --forceExit",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --forceExit",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:debug": "node --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles",
    "setup-test-users": "node scripts/setup-test-users.js",
    "setup-test-causes": "node scripts/setup-test-causes.js",
    "setup-test-data": "npm run setup-test-users && npm run setup-test-causes",
    "list-users": "node scripts/list-users.js",
    "test-auth": "node scripts/test-epic1-auth.js",
    "test-access": "node scripts/test-epic1-rbac.js",
    "test-2fa": "node scripts/test-story-1.5-2fa.js",
    "test-donate": "node scripts/test-epic2-donate.js",
    "verify-story-2.3": "node scripts/verify-story-2.3.js",
    "test-story-4.1": "node scripts/test-story-4.1-dashboard.js",
    "test-story-5.1": "node scripts/test-story-5.1-https.js",
    "test-story-5.3": "node scripts/test-story-5.3-rate-limiting.js",
    "test-story-5.4": "node scripts/test-story-5.4-error-handling.js",
    "test-story-5.5": "node scripts/test-story-5.5-health-check.js",
    "test-all-epic1": "npm run test-auth && npm run test-access",
    "test-all-epic2": "npm run test-donate && npm run verify-story-2.3",
    "test-all-epic5": "npm run test-story-5.3 && npm run test-story-5.4 && npm run test-story-5.5",
    "generate-ssl": "powershell -ExecutionPolicy Bypass -File ./generate-ssl-cert.ps1"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "json-summary"],
    "collectCoverageFrom": [
      "models/**/*.js",
      "routes/**/*.js",
      "middleware/**/*.js",
      "utils/**/*.js",
      "!scripts/**",
      "!**/*.test.js",
      "!**/__tests__/**"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/scripts/",
      "/coverage/",
      "server.js",
      "server-https.js",
      "config/db.js",
      "generate-ssl-cert.ps1"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 73,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    },
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "transform": {},
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "chalk": "^5.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.0",
    "nodemailer": "^7.0.10",
    "pdfkit": "^0.15.0",
    "pino": "^8.21.0",
    "pino-http": "^8.0.0",
    "pino-pretty": "^13.1.2",
    "qrcode": "^1.5.4",
    "speakeasy": "^2.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.3.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  },
  "description": "",
  "main": "server.js",
  "keywords": [],
  "author": "",
  "license": "ISC"
}
